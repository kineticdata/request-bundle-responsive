    }
    header.main div.container div.collapse > a.drop-down-menus div.carrot {
        border-color: transparent;
        border-bottom-color: #fff;
        border-style: dashed dashed solid;
        border-width: 0 8px 8px;
        position: absolute;
        right: 46px;
        top: 45px;
        z-index: 1;
        height: 0;
